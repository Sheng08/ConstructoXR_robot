<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find xrrover_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- xrlab_rover -->
  <include file="$(find xrrover_bringup)/launch/xrrover_remote.launch"/>
  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher">
    <param name="rate" value="50"/>
  </node>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find xrrover_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find xrrover_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find xrrover_navigation)/rviz/xrrover_navigation.rviz"/>
  </group>
</launch>